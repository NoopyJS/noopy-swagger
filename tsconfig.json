{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "declaration": true,
    "moduleResolution": "NodeNext",
     "rootDir": "lib",
     "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "reflect-metadata"]
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules"]
}
